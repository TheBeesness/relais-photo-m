let lookupData = {};
let errorMessage = '';

try {
    const res = await fetch('https://script.google.com/macros/s/AKfycbxRHApJxHACO-eSHDNHYHqOmOV60ka9YqHHOywficA29M7bAOk2vOrshfZFcTli6bU7/exec');
    if (!res.ok) {
        throw new Error('Erreure de réseau.');
    }
    const { data } = await res.json();
    lookupData = data.reduce((acc: { [x: string]: any; }, item: { key: string | number; }) => {
        acc[item.key] = item;
        return acc;
    }, {});
} catch (error) {
    errorMessage = 'Erreure avec le serveur distant. Veuillez réessayer ou contacter info@myriamtphotographe.com';
    console.error('Error fetching data:', error);
}
